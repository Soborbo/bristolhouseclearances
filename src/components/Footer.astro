---
const currentYear = new Date().getFullYear();
const phoneNumber = '0117 123 4567';
const phoneHref = 'tel:+44117123456';
const email = 'info@bristolhouseclearances.co.uk';

const navLinks = [
  { label: 'Services', href: '#services' },
  { label: 'Calculator', href: '#calculator' },
  { label: 'Pricing', href: '#pricing' },
  { label: 'Reviews', href: '#reviews' },
  { label: 'Areas', href: '#areas' },
  { label: 'FAQ', href: '#faq' },
  { label: 'About', href: '#about' },
  { label: 'Contact', href: '#contact' },
];
---

<footer class="bg-brand-navy text-slate-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company info -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <span class="w-9 h-9 bg-brand-green rounded-lg flex items-center justify-center text-white font-bold text-sm">BH</span>
          <span class="font-bold text-lg text-white">Bristol House Clearances</span>
        </div>
        <p class="text-sm leading-relaxed mb-4">
          Professional house clearance, rubbish removal, and garden clearance in Bristol, Bath and surrounding areas.
        </p>
        <p class="text-sm">EA Licensed Waste Carrier</p>
        <p class="text-sm">&pound;10M Public Liability Insurance</p>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {navLinks.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white font-semibold mb-4">Contact Us</h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a href={phoneHref} class="hover:text-white transition-colors flex items-center gap-2">
              <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" /></svg>
              {phoneNumber}
            </a>
          </li>
          <li>
            <a href={`mailto:${email}`} class="hover:text-white transition-colors flex items-center gap-2">
              <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
              {email}
            </a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            Mon–Sat 7am–7pm, Sun by appointment
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
            Based in Bristol, serving Bath &amp; surrounding areas
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-white font-semibold mb-4">Legal</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="#" class="hover:text-white transition-colors">Privacy Policy</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Terms &amp; Conditions</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Environmental Policy</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Health &amp; Safety Policy</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-slate-600 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm">
      <p>&copy; {currentYear} Bristol House Clearances. All rights reserved.</p>
      <p>Website by <a href="https://soborbo.com" class="hover:text-white transition-colors" target="_blank" rel="noopener">Soborbo Ltd</a></p>
    </div>
  </div>
</footer>
