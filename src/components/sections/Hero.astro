---
import { Picture } from 'astro:assets';
import heroImage from '../../assets/img/Bristol-house-clearances11.jpg';
import Button from '../ui/Button.astro';

const whatsappHref = 'https://wa.me/44117123456?text=Hi%2C%20I%20need%20a%20clearance%20quote.%20Here%20are%20photos%20of%20what%20needs%20clearing%3A';
---

<section id="hero" class="relative flex-1 flex items-center overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0">
    <Picture
      src={heroImage}
      widths={[640, 750, 828, 1080, 1200, 1920, 2048, 2560]}
      sizes="100vw"
      formats={['avif', 'webp']}
      quality={60}
      alt="Bristol House Clearances team loading items into van"
      class="w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
    />
  </div>

  <!-- Half-width overlay: covers right 50% -->
  <div class="absolute inset-y-0 right-0 w-full lg:w-1/2 bg-brand-navy/85"></div>
  <!-- Mobile: gradient from bottom for readability, face stays clear at top -->
  <div class="absolute inset-0 bg-gradient-to-t from-brand-navy/80 via-brand-navy/50 to-transparent lg:hidden"></div>

  <!-- Content — centered in the right 50% -->
  <div class="relative z-10 w-full py-12 lg:py-16 flex lg:justify-end">
    <div class="lg:w-1/2 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-lg text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-5xl font-extrabold text-white leading-tight tracking-tight">
        House Clearance Bristol
      </h1>
      <p class="mt-2 text-xl sm:text-2xl lg:text-3xl font-semibold text-green-400 tracking-tight">
        Instant Quote. Price Locked. Zero&nbsp;to&nbsp;Landfill.
      </p>

      <p class="mt-6 text-lg text-slate-200 leading-relaxed">
        We clear houses, gardens, offices, and anything else — same day available. Send us photos, get a firm quote in&nbsp;2&nbsp;hours.
      </p>

      <!-- CTAs -->
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <Button href="#calculator" variant="primary" size="lg">
          Get Your Instant Quote
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
          </svg>
        </Button>
        <Button href={whatsappHref} variant="whatsapp" size="lg" target="_blank" rel="noopener">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          WhatsApp Us Photos
        </Button>
      </div>

    </div>
    </div>
  </div>
</section>
