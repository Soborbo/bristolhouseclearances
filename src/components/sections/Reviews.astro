---
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

const reviews = [
  {
    name: 'Sarah T.',
    rating: 5,
    service: 'Probate Clearance',
    text: "Absolutely incredible service during what was an incredibly difficult time. The team were compassionate, professional, and thorough. They even sent us a report showing what was donated to charity. Can't recommend enough.",
    date: 'January 2026',
  },
  {
    name: 'James P.',
    rating: 5,
    service: 'House Clearance',
    text: 'Used them to clear a 3-bed house before selling. Quoted via WhatsApp photos, price was locked in, and they did the job in half a day. Property was spotless. Will use again.',
    date: 'December 2025',
  },
  {
    name: 'Helen M.',
    rating: 5,
    service: 'Garden Clearance',
    text: "Garden was completely overgrown — hadn't been touched in years. They cleared everything including an old shed and tons of green waste. Couldn't believe the transformation.",
    date: 'November 2025',
  },
  {
    name: 'Mark D.',
    rating: 5,
    service: 'Commercial Clearance',
    text: "We manage 40+ rental properties across Bristol. These guys are our go-to for end of tenancy clearances. Fast, reliable, and the monthly invoicing makes our lives so much easier.",
    date: 'October 2025',
  },
  {
    name: 'Lisa K.',
    rating: 5,
    service: 'Rubbish Removal',
    text: "Called at 9am, they were here by 2pm. Old furniture, broken appliances, bags of rubbish — all gone in under an hour. Price was exactly what they quoted. Brilliant.",
    date: 'January 2026',
  },
];
---

<section id="reviews" class="py-16 lg:py-20 bg-slate-50">
  <Container>
    <SectionHeading title="Don't Take Our Word For It" />

    <!-- Aggregate score -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center gap-2 bg-white rounded-full px-6 py-3 shadow-sm border border-slate-200">
        <div class="flex">
          {[1,2,3,4,5].map(() => (
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
        <span class="font-bold text-brand-navy">4.9/5</span>
        <span class="text-slate-500 text-sm">from 200+ reviews</span>
      </div>
    </div>

    <!-- Review cards -->
    <div class="flex gap-4 overflow-x-auto snap-x snap-mandatory pb-4 -mx-4 px-4 scrollbar-hide">
      {reviews.map((review) => (
        <div class="snap-start shrink-0 w-80 bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
          <div class="flex mb-3">
            {Array.from({ length: review.rating }).map(() => (
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <p class="text-sm text-slate-600 leading-relaxed mb-4">"{review.text}"</p>
          <div class="flex items-center justify-between text-xs">
            <span class="font-semibold text-brand-navy">{review.name}</span>
            <span class="text-slate-400">{review.service} &bull; {review.date}</span>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
