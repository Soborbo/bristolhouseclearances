---
/**
 * CouncilCommercial — B2B / public-sector section.
 * Dark navy background with services, accreditations, and CTAs.
 */
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

const services = [
  'Void property clearance',
  'Bulky waste collection',
  'Fly-tipping removal',
  'Specialist cleaning',
  'End-of-tenancy clearance for social housing',
];

const slaCommitments = [
  '24\u201348 hour turnaround',
  'Photo documentation',
  'Digital waste transfer notes',
  'Monthly reporting',
];

const accreditations = [
  'CHAS',
  'Constructionline Gold',
  'Upper Tier Waste Carrier',
  'ISO 14001',
];

const insurance = [
  '\u00A310M Public Liability',
  '\u00A310M Employers\u2019 Liability',
  '\u00A32M Professional Indemnity',
];

const socialValue = [
  'Local employment',
  'Living Wage employer',
  '95%+ recycling rate',
];
---

<section id="council-commercial" class="bg-brand-navy text-white py-16 lg:py-20">
  <Container>
    <SectionHeading
      title="Working With Councils, Housing Associations & Businesses"
      light={true}
    />

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Left column — services & SLA -->
      <div>
        <h3 class="text-xl font-semibold text-white">Our Services</h3>
        <ul class="mt-4 space-y-3">
          {services.map((item) => (
            <li class="flex items-start gap-3 text-slate-300">
              <svg class="w-5 h-5 text-brand-green mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>

        <h3 class="text-xl font-semibold text-white mt-8">SLA Commitments</h3>
        <ul class="mt-4 space-y-3">
          {slaCommitments.map((item) => (
            <li class="flex items-start gap-3 text-slate-300">
              <svg class="w-5 h-5 text-brand-green mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Right column — accreditations, insurance, social value, CTAs -->
      <div>
        <h3 class="text-xl font-semibold text-white">Accreditations</h3>
        <ul class="mt-4 space-y-3">
          {accreditations.map((item) => (
            <li class="flex items-start gap-3 text-slate-300">
              <svg class="w-5 h-5 text-brand-green mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>

        <h3 class="text-xl font-semibold text-white mt-8">Insurance</h3>
        <ul class="mt-4 space-y-3">
          {insurance.map((item) => (
            <li class="flex items-start gap-3 text-slate-300">
              <svg class="w-5 h-5 text-brand-green mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>

        <h3 class="text-xl font-semibold text-white mt-8">Social Value</h3>
        <ul class="mt-4 space-y-3">
          {socialValue.map((item) => (
            <li class="flex items-start gap-3 text-slate-300">
              <svg class="w-5 h-5 text-brand-green mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>

        <!-- CTA buttons -->
        <div class="flex flex-wrap gap-4 mt-8">
          <a
            href="#capability-statement"
            class="inline-flex items-center justify-center rounded-lg border-2 border-white px-6 py-3 text-sm font-semibold text-white transition hover:bg-white hover:text-brand-navy"
          >
            Download Capability Statement
          </a>
          <a
            href="#contact"
            class="inline-flex items-center justify-center rounded-lg bg-brand-green px-6 py-3 text-sm font-semibold text-white transition hover:bg-brand-green/90"
          >
            Contact Commercial Team
          </a>
        </div>
      </div>
    </div>
  </Container>
</section>
